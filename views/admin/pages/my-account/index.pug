extends ../../layouts/default.pug 

block main  
          .profile-card
            .profile-header.text-center
              h4 User Profile
            .profile-body
              if user.avatar
                img(src=user.avatar, alt='Avatar')
              else 
                img(src="/admin/images/logo_default.png", alt="")
              h5 #{user.fullName}
              p
                strong Email:
                |  #{user.email}
              p
                strong Số điện thoại:
                |   #{user.phone}
              p
                strong Cấp bậc:
                |  #{roles.title}
              p
                strong Trạng thái:
                |  #{user.status}
              p
                strong Được tạo vào:
                |  #{moment(createdAt).format('MMMM Do YYYY, h:mm:ss a')}
              p
                strong Cập nhật gần nhất:
                |  #{moment(updateAt).format('MMMM Do YYYY, h:mm:ss a')}
              a(href="/admin/my-account/edit").btn.btn-secondary Chỉnh sửa 