extends ../../layouts/default.pug 

block main 
    .container 
        h2 Thong tin người dùng 
        ul 
          li #{order.userInfo.fullName }
          li #{order.userInfo.phone}
          li #{order.userInfo.address.street} 
          li #{order.userInfo.address.city}
          li #{order.userInfo.address.country}
        h2 Danh sách sản phẩm 
        table.table 
            thead 
                tr 
                  th #
                  th Ảnh 
                  th Tên 
                  th Số Lượng 
                  th  Thao tác           
            tbody 
                each item, index in order.products
                  tr 
                    td #{index + 1}
                    td 
                      img(src=item.infoProducts.thumbnail, alt="", style='width: 50px; height: 50px')
                    td #{item.infoProducts.title}
                    td #{item.quantity}
                    td  
                      button.btn.btn-secondary Chi Tiết 
            h3 Mua vào ngày #{moment(order.createdAt).format('MMMM Do YYYY, h:mm:ss a')}