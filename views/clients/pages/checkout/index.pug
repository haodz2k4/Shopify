extends ../../layouts/default.pug 

block main 
    .container 
        h2 Trang thanh toán 
        table.table
          thead
            tr 
              th STT
              th Ảnh 
              th Tên 
              th Giá 
              th Số lượng 
              th Tổng tiền 
              th Hành động 
          tbody
            each item, index in checkout
              tr 
                td #{index + 1}
                td
                  img(src=item.thumbnail, alt="", style='width: 50px; height: 50px') 
                td #{item.title}
                td #{item.priceNew}
                td #{item.quantity}
                td #{item.total}
                td 
                  button.btn.btn-danger Xóa 
        h1 Tổng tiền cần thanh toán: #{totalPrice}  
        