extends  ../../layouts/user.pug 
include ../../mixins/show-alert.pug
block main 
    
    section.vh-100.bg-image(style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS36A0XSz8bF0v5-VFLEsbW7pzSh6YymkElnw&usqp=CAU'); width: 100%px")
      
      .mask.d-flex.align-items-center.h-100.gradient-custom-3
        .container.h-100
          .row.d-flex.justify-content-center.align-items-center.h-100
            .col-12.col-md-9.col-lg-7.col-xl-6
              .card(style='border-radius: 15px;')
                .card-body.p-5
                  +alertSuccess()
                  +alertError()
                  h2.text-uppercase.text-center.mb-5 Nhập mã Otp  
                  form(action="/user/password/otp" method="POST") 
                    .form-outline.mb-4(data-mdb-input-init='')
                      input#form3Example3cg.form-control.form-control-lg(type='email', name='email' value=email readonly)
                      label.form-label(for='form3Example3cg') Địa chỉ Email 
                    .form-outline.mb-4(data-mdb-input-init='')
                      input#form3Example3cg.form-control.form-control-lg(type='text', name='otp')
                      label.form-label(for='form3Example3cg') Mã Otp 
                    .d-flex.justify-content-center
                      button.btn.btn-success.btn-block.btn-lg.gradient-custom-4.text-body(type='submit', data-mdb-button-init='', data-mdb-ripple-init='') Gửi
                    p.text-center.text-muted.mt-5.mb-0
                      | Quay trở lại trang ? 
                      a.fw-bold.text-body(href='/user/login')
                        u Đăng nhập  